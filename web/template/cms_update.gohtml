<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="author" content="humanova"/>
    <title>brad blog-cms</title>
    <meta type="description" content="blog cms system">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

</head>
<body>
<br>

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h1 style="text-align:center">brad cms</h1>
        <br>
        <h3 style="margin-bottom: 2%">Edit post : {{(index .Posts 0).Filename}}</h3>
        <form>
            <div class="form-group">
                <input autocomplete="off" type="text" value="{{(index .Posts 0).Title}}" class="form-control"
                       name="post-title" id="post-title" placeholder="Post title" required>
                <br>
            </div>
        </form>
        <textarea id="editor"></textarea>

        <div class="form-group">
            <input class="btn btn-primary btn-lg float-right" id="gen-button" type="submit" value="Update post">
            <input class="btn btn-danger btn-lg float-left" id="delete-button" type="submit" value="Delete post">
        </div>

        <div class="modal fade" id="responseModal" tabindex="-1" role="dialog" aria-labelledby="responseModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="responseModalLabel">Response</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="resp-msg"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="col-md-3"></div>
</div>
<script>
    var simplemde = new SimpleMDE({
        element: document.getElementById("editor"),
        spellChecker: false,
        initialValue: "{{(index .Posts 0).Text}}"
    });
</script>
<script>
    (function () {
        let api_base = {{.APIPath}};

        let gen_button = document.getElementById("gen-button");
        post_title = document.getElementById("post-title");
        post_filename = {{(index .Posts 0).Filename}};


        gen_button.onclick = function () {
            const config_dict = {
                title: post_title.value,
                text: simplemde.value(),
                filename: post_filename.split(".")[0],
            };

            let url = api_base + "/update_post";
            let xhr = new XMLHttpRequest();
            xhr.open("POST", url, true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function () {
                resp_msg_p = document.getElementById("resp-msg")
                if (xhr.readyState === 4 && xhr.status === 200) {
                    resp_msg_p.innerText = "Update successful : " + post_filename
                    $('#responseModal').modal('show')

                } else {
                    resp_msg_p.innerText = "Update unsuccessful : " + post_filename
                    $('#responseModal').modal('show')
                }
                setTimeout(function () {
                    window.location.reload(1);
                }, 2000);
            };
            xhr.send(JSON.stringify(config_dict))
        };

        let delete_button = document.getElementById("delete-button");

        delete_button.onclick = function () {
            const config_dict = {
                filename: post_filename.split(".")[0],
            };

            let url = api_base + "/delete_post";
            let xhr = new XMLHttpRequest();
            xhr.open("POST", url, true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function () {
                resp_msg_p = document.getElementById("resp-msg")
                if (xhr.readyState === 4 && xhr.status === 200) {
                    resp_msg_p.innerText = "Delete successful : " + post_filename
                    $('#responseModal').modal('show')

                } else {
                    resp_msg_p.innerText = "Delete unsuccessful : " + post_filename
                    $('#responseModal').modal('show')
                }
                setTimeout(function () {
                    document.location = 'cms';
                }, 2000);
            };
            xhr.send(JSON.stringify(config_dict))
        };

    })();
</script>
</body>
